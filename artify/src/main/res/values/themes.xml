<resources>
    <style name="Theme.Artify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Màu nền chung -->
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Màu chữ chính -->
        <item name="android:textColorPrimary">@color/title_text</item>

        <!-- Màu chữ phụ -->
        <item name="android:textColorSecondary">@color/desc_text</item>
        <item name="android:fontFamily">@font/work_sans</item>
        
        <!-- Activity transition animations -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation.SlideFromRight</item>
    </style>

    <!-- Style for Color Picker Dialog -->
    <style name="Theme.Artify.ColorPickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- You can customize dialog properties here if needed -->
        <!-- Example: <item name="android:background">@color/white</item> -->
    </style>
</resources>
