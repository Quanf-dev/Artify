<?xml version="1.0" encoding="utf-8"?>
<com.example.common.gradiant4.LinearGradientBorder 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/languageItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/ivLanguageFlag"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/language"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvLanguageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="English"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/ivLanguageSelected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Selected language"
        android:src="@drawable/ic_check"
        android:visibility="gone" />
</com.example.common.gradiant4.LinearGradientBorder>