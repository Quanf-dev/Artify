<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iconics="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/filterBottomMenu"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:minWidth="700dp"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:id="@+id/llFreeStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-edit"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_style"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-format-color-fill"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-circle-o"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/circle"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llArrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-arrow-right"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrow"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Redo -->
        <LinearLayout
            android:id="@+id/llLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-minus"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Save -->
        <LinearLayout
            android:id="@+id/llRectangle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-crop-free"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reactangle"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Reset -->
        <LinearLayout
            android:id="@+id/llDashLine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-more"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_line"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Há»§y -->
        <LinearLayout
            android:id="@+id/llBlur"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-blur"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blur"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEraser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-delete"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eraser"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSelect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-select-all"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-close-circle"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>

