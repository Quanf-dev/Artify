<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_white"
    android:padding="16dp">

    <EditText
        android:id="@+id/etText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập văn bản"
        android:inputType="text"
        android:maxLines="3"
        android:padding="8dp"
        android:background="@drawable/bg_rounded_gray"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:id="@+id/spinnerFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kích thước chữ"
        android:textColor="@color/label_text"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <SeekBar
        android:id="@+id/seekBarTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Căn lề"
        android:textColor="@color/label_text"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <RadioGroup
        android:id="@+id/radioGroupAlign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trái"/>

        <RadioButton
            android:id="@+id/rbCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giữa"/>

        <RadioButton
            android:id="@+id/rbRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phải"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu chữ"
                android:textColor="@color/label_text"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <View
                android:id="@+id/viewTextColor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu nền"
                android:textColor="@color/label_text"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <View
                android:id="@+id/viewBgColor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_gray"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Độ trong suốt nền"
        android:textColor="@color/label_text"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <SeekBar
        android:id="@+id/seekBarBgOpacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="128"/>

</LinearLayout>