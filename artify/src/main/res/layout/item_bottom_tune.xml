<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iconics="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:minWidth="630dp"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:id="@+id/llBrightness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-brightness-6brightness-6"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llContrast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-tonality"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrast"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSaturation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-grain"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturation"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExposure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-exposure"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exposure"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Redo -->
        <LinearLayout
            android:id="@+id/llHue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-gradient"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hue"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Save -->
        <LinearLayout
            android:id="@+id/llTemperture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-pizza"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperture"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Reset -->
        <LinearLayout
            android:id="@+id/llSharpness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-timer"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sharpness"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Há»§y -->
        <LinearLayout
            android:id="@+id/llLuminance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-sun"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/luminance"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                iconics:iiv_color="@color/iconColor"
                iconics:iiv_icon="gmi-blur-off"
                iconics:iiv_size="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fade"
                android:textColor="@color/iconColor"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</HorizontalScrollView>

