<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <include layout="@layout/item_toolbar_edit_main" />

    <!-- Main content area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- The image adjustment view will be added here -->
        <com.example.imageeditor.ui.views.ImageAdjustmentView
            android:id="@+id/imageAdjustmentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </FrameLayout>

    <!-- Controls area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bottom tune menu -->
        <include
            android:id="@+id/bottomTuneMenu"
            layout="@layout/item_bottom_tune" />

    </LinearLayout>

</LinearLayout> 