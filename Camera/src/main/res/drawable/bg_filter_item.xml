<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/filter_item_selected" />
            <stroke 
                android:width="2dp"
                android:color="@color/filter_item_selected_stroke" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/filter_item_background" />
            <stroke 
                android:width="1dp"
                android:color="@color/filter_item_stroke" />
        </shape>
    </item>
    
</selector> 