<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomControlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Grid Lines Overlay -->
    <com.example.camera.ui.camera.GridLinesView
        android:id="@+id/gridLinesView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/previewView"
        app:layout_constraintEnd_toEndOf="@+id/previewView"
        app:layout_constraintStart_toStartOf="@+id/previewView"
        app:layout_constraintTop_toTopOf="@+id/previewView" />

    <!-- Filter Effect Overlay -->
    <com.example.camera.ui.camera.FilterEffectView
        android:id="@+id/filterEffectView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/previewView"
        app:layout_constraintEnd_toEndOf="@+id/previewView"
        app:layout_constraintStart_toStartOf="@+id/previewView"
        app:layout_constraintTop_toTopOf="@+id/previewView" />

    <!-- Face Mask Overlay -->

    <!-- Top Controls -->
    <LinearLayout
        android:id="@+id/topControlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Flash Mode -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            android:background="@drawable/bg_control_button"
            android:contentDescription="@string/flash_mode"
            android:src="@drawable/ic_flash_auto"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Aspect Ratio -->
        <TextView
            android:id="@+id/tvAspectRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_control_button"
            android:paddingHorizontal="@dimen/spacing_medium"
            android:paddingVertical="@dimen/spacing_small"
            android:text="@string/aspect_ratio_4_3"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Grid Lines -->
        <ImageButton
            android:id="@+id/btnGrid"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            android:background="@drawable/bg_control_button"
            android:contentDescription="Grid Lines"
            android:src="@drawable/ic_grid"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Timer -->
        <ImageButton
            android:id="@+id/btnTimer"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            android:background="@drawable/bg_control_button"
            android:contentDescription="@string/timer"
            android:src="@drawable/ic_timer"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Timer Countdown -->
    <TextView
        android:id="@+id/tvTimerCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_timer_countdown"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_medium"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/previewView"
        app:layout_constraintEnd_toEndOf="@+id/previewView"
        app:layout_constraintStart_toStartOf="@+id/previewView"
        app:layout_constraintTop_toTopOf="@+id/previewView"
        tools:text="3"
        tools:visibility="visible" />

    <!-- Side Controls (Filters and Masks) -->
    <LinearLayout
        android:id="@+id/sideControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomControlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topControlsContainer">

        <!-- Face Detection Toggle -->
        <ImageButton
            android:id="@+id/btnFaceDetection"
            android:layout_width="@dimen/control_button_size"
            android:layout_height="@dimen/control_button_size"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@drawable/bg_control_button"
            android:contentDescription="@string/face_detection"
            android:src="@drawable/ic_face_detection"
            app:tint="@android:color/white" />

        <!-- Filters RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFilters"
            android:layout_width="@dimen/filter_item_size"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:orientation="vertical"
            tools:itemCount="5" />

        <!-- Face Masks RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFaceMasks"
            android:layout_width="@dimen/filter_item_size"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:itemCount="4" />

    </LinearLayout>

    <!-- Zoom and Brightness Controls -->
    <LinearLayout
        android:id="@+id/leftControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomControlsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topControlsContainer">

        <!-- Zoom Slider -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="@drawable/bg_slider_container"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_medium">

            <ImageView
                android:layout_width="@dimen/control_icon_small"
                android:layout_height="@dimen/control_icon_small"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:src="@drawable/ic_zoom_in"
                app:tint="@android:color/white" />

            <SeekBar
                android:id="@+id/seekBarZoom"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="0"
                android:rotation="270" />

            <ImageView
                android:layout_width="@dimen/control_icon_small"
                android:layout_height="@dimen/control_icon_small"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_small"
                android:src="@drawable/ic_zoom_out"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Brightness Slider -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_slider_container"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_medium">

            <ImageView
                android:layout_width="@dimen/control_icon_small"
                android:layout_height="@dimen/control_icon_small"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:src="@drawable/ic_brightness_high"
                app:tint="@android:color/white" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="100"
                android:progress="50"
                android:rotation="270" />

            <ImageView
                android:layout_width="@dimen/control_icon_small"
                android:layout_height="@dimen/control_icon_small"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_small"
                android:src="@drawable/ic_brightness_low"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/bottomControlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_controls"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Gallery Button -->
        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="@dimen/control_button_large"
            android:layout_height="@dimen/control_button_large"
            android:background="@drawable/bg_gallery_button"
            android:contentDescription="@string/gallery"
            android:src="@drawable/ic_gallery"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Capture Button -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="@dimen/capture_button_size"
            android:layout_height="@dimen/capture_button_size"
            android:background="@drawable/bg_capture_button"
            android:contentDescription="@string/take_photo"
            android:src="@drawable/ic_camera_capture" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Switch Camera Button -->
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="@dimen/control_button_large"
            android:layout_height="@dimen/control_button_large"
            android:background="@drawable/bg_control_button"
            android:contentDescription="@string/switch_camera"
            android:src="@drawable/ic_switch_camera"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/previewView"
        app:layout_constraintEnd_toEndOf="@+id/previewView"
        app:layout_constraintStart_toStartOf="@+id/previewView"
        app:layout_constraintTop_toTopOf="@+id/previewView" />

</androidx.constraintlayout.widget.ConstraintLayout> 