<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.camera.filter.CameraSourcePreview
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.camera.filter.GraphicOverlay
                android:id="@+id/faceOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.example.camera.filter.CameraSourcePreview>

        <!-- Timer countdown text -->
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="72sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="#80000000"
            android:padding="16dp" />

        <LinearLayout
            android:id="@+id/controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBarZoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:max="100"
                android:progress="0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/change"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/flip_camera"
                        app:tint="#ffffff" />

                    <ImageButton
                        android:id="@+id/flash"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/flash"
                        app:tint="#ffffff" />

                    <ImageButton
                        android:id="@+id/grid"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        app:srcCompat="@android:drawable/ic_menu_view"
                        app:tint="#ffffff" />

                    <ImageButton
                        android:id="@+id/timer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="75dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        app:srcCompat="@android:drawable/ic_menu_recent_history"
                        app:tint="#ffffff" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_camera_all"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/face"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/face" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_background"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4dp">

                    <ImageButton
                        android:id="@+id/no_filter"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background_select"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/no_filter" />

                    <ImageButton
                        android:id="@+id/hair"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hair" />

                    <ImageButton
                        android:id="@+id/hat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hat" />

                    <ImageButton
                        android:id="@+id/hat2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hat2" />

                    <ImageButton
                        android:id="@+id/op"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/op" />

                    <ImageButton
                        android:id="@+id/snap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/snap" />

                    <ImageButton
                        android:id="@+id/glasses2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/glasses2" />

                    <ImageButton
                        android:id="@+id/glasses3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/glasses3" />

                    <ImageButton
                        android:id="@+id/glasses4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/glasses4" />

                    <ImageButton
                        android:id="@+id/glasses5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/glasses5" />

                    <ImageButton
                        android:id="@+id/mask2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/mouthmask" />

                    <ImageButton
                        android:id="@+id/mask3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/mouthmask2" />

                    <ImageButton
                        android:id="@+id/dog"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/dog" />

                    <ImageButton
                        android:id="@+id/cat2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_background"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/cat2" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
