<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer festive frame -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="20dp" android:color="#B71C1C" />
            <solid android:color="#00000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    
    <!-- Middle layer -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke android:width="5dp" android:color="#4CAF50" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- Inner snowflake pattern (simplified as white dots) -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FFFFFF" dashWidth="5dp" dashGap="10dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list> 